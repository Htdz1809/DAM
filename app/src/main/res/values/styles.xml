<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ExpandedAppBar" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/card_background</item>
        <item name="itemIconSize">18dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextStyle</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconTint">@color/primary</item>
        <item name="itemTextColor">@color/primary</item>
        <item name="itemPadding">0dp</item>
        <item name="menu">@menu/bottom_nav_menu</item>
    </style>

    <style name="BottomNavigationTextStyle">
        <item name="android:textSize">9sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    
    <!-- New text styles for different uses -->
    <style name="TextHeading" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextSubheading" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    
    <style name="TextBody" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextCaption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
</resources> 